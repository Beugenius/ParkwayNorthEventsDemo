@page
@using Infrastructure.Utility;
@model ParkwayNorthEvents.Pages.Gallery.CreateNewModel
@{
}

@if (User.IsInRole(SD.AdminRole) || User.IsInRole(SD.ManagerRole))
{
    <form method="post" asp-action="CreateNew" enctype="multipart/form-data">
        <div class="container">
            <div class="form-group row">
                <div>
                    <label asp-for="NewGallery.NameOfEvent"></label>
                    <input class="form-control" asp-for="NewGallery.NameOfEvent" />
                </div>
            </div>
            <div class="form-group row">
                <div>
                    <input name="image" type="file" class="form-control" required/>
                </div>
            </div>
            <div class="form-group row">
                <div>
                    <button type="submit" class="btn btn-primary parkwayButton">Submit</button>
                </div>
            </div>
        </div>
    </form>
    <form method="post" asp-action="View">

        <button type="submit" class="btn btn-primary parkwayButton" asp-page-handler="back">Back</button>
    </form>
}
else
{
    <div class="container">
        No galleries yet...
    </div>

}