@page
@model ParkwayNorthEvents.Pages.Scheduling.EventModel
@using Infrastructure.Utility;
@{
}
@if (User.IsInRole(SD.AdminRole) || User.IsInRole(SD.ManagerRole))
{
    <form method="post" asp-action="Event">
        <div class="card mt-3 form-group">
            <h1 class="card-title mt-3 mx-3">Create an event booking</h1>
            <div class="card-body">
                <div class="card">
                    <h3 class="card-title mt-3 mx-3">Client Information</h3>
                    <div class="card-body">
                        <div class="card-text">
                            <label align="left" class="required-star mt-3" asp-for="ApplicationUser.FirstName"></label>
                            <input class="form-control mt-3" asp-for="ApplicationUser.FirstName" />
                            <span class="text-danger mt-3" asp-validation-for="ApplicationUser.FirstName"></span>

                            <label class="required-star mt-3" asp-for="ApplicationUser.LastName"></label>
                            <input class="form-control mt-3" asp-for="ApplicationUser.LastName" />
                            <span class="text-danger mt-3" asp-validation-for="ApplicationUser.LastName"></span>

                            <label class="required-star mt-3">Phone Number</label>
                            <input class="form-control mt-3" asp-for="ApplicationUser.PhoneNumber" required data-val-regex="Please enter valid phone number" data-val-regex-pattern="^\(?([0-9]{3})\)?[-. ]?([0-9]{3})[-. ]?([0-9]{4})$" />
                            <span class="text-danger mt-3" asp-validation-for="ApplicationUser.PhoneNumber"></span>

                            <label class="required-star mt-3" asp-for="ApplicationUser.Email"></label>
                            <input class="form-control mt-3" asp-for="ApplicationUser.Email" />
                            <span class="text-danger mt-3" asp-validation-for="ApplicationUser.Email"></span>
                        </div>
                    </div>
                </div>
                <div class="card mt-3">
                    <h3 class="card-title mt-3 mx-3">Event Information</h3>
                    <div class="card-body">
                        <div class="card-text">
                            <input type="hidden" class="form-control mt-3" asp-for="BookingObject.Description" value="Please enter your vision of the event (as much detail as possible)" />

                            <input type="hidden" asp-for="BookingObject.BookingStatus" value="New" />

                            <label class="required-star mt-3">Name of Event</label>
                            <input class="form-control mt-3" type="text" asp-for="BookingObject.EventTitle" />
                            <span class="text-danger mt-3" asp-validation-for="BookingObject.EventTitle"></span>

                            <label class="required-star mt-3">Type</label>
                            <select class="form-control mt-3" asp-for="BookingObject.Type" required>
                                <option value="0">Day Of Wedding Coordination</option>
                                <option value="1">Hourly Consulting/Micro-Planning</option>
                                <option value="2">Proposal Assistance</option>
                                <option value="3">Other</option>
                                <option value="4">DIY Services</option>
                            </select>

                            <label class="required-star mt-3">Amount to charge</label>
                            <input asp-for="BookingObject.Balance" class="form-control" min="0.00" max="1000.00" type="number" step="0.01" id="amountToCharge" />

                            <label class="required-star mt-3" asp-for="BookingObject.DateOfEvent"></label>
                            <input id="datepicker" class="form-control mt-3" type="text" asp-for="BookingObject.DateOfEvent" />
                            <span class="text-danger mt-3" asp-validation-for="BookingObject.DateOfEvent"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group row pb-3">
                    <div class="col pt-3">
                        <button type="reset" class="btn btn-primary parkwayDeleteButton form-control">Reset</button>
                    </div>
                    <div class="col pt-3">
                        <button type="submit" onclick="return ValidateInput()" class="btn btn-primary parkwayButton form-control">Submit</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
}

@section Scripts {
    <script src="~/js/datepicker.js"></script>
}