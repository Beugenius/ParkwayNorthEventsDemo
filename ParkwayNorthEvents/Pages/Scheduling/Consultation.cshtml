@page
@model ParkwayNorthEvents.Pages.Scheduling.ConsultationModel
@{
}
<h1 align="center" class="pt-3">Schedule a consultation</h1>
<div class="container">
    <form method="post" asp-action="Consultation">
        <div id="consultationCard" class="card mt-3 form-group" align="center">
            <h3 class="card-title text-center mt-3">Contact Information</h3>
            <div class="card-text mt-3" align="center">
                <label class="required-star" asp-for="ClientObject.FirstName"></label>
                <input class="form-control mt-3" asp-for="ClientObject.FirstName" required placeholder="Please enter your first name"/>
                <span class="text-danger mt-3" asp-validation-for="ClientObject.FirstName"></span>
            </div>
            <div class="card-text">
                <label class="mt-3 required-star" asp-for="ClientObject.LastName"></label>
            </div>
            <div class="card-text">
                <input class="form-control mt-3 required-star" asp-for="ClientObject.LastName" required placeholder="Please enter your last name" />
                <span class="text-danger mt-3" asp-validation-for="ClientObject.LastName"></span>
            </div>
            <div class="card-text">
                <label class="mt-3 required-star">Phone Number</label>
            </div>
            <div class="card-text">
                @if (Model.ErrorMessage is not null && Model.ErrorMessage.InvalidPhoneNumber is not null)
                {
                    <span class="text-danger mt-3">@Model.ErrorMessage.InvalidPhoneNumber</span>
                }
                <input class="form-control mt-3" asp-for="ClientObject.PhoneNumber" data-val-regex="Please enter valid phone number" data-val-regex-pattern="^\(?([0-9]{3})\)?[-. ]?([0-9]{3})[-. ]?([0-9]{4})$" type="text" autocomplete="off" placeholder="(000)000-0000"/>
                <span asp-validation-for="ClientObject.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="card-text">
                <label class="mt-3 required-star" asp-for="ClientObject.Email"></label>
            </div>
            <div class="card-text">
                <input class="form-control mt-3 mb-3" asp-for="ClientObject.Email" placeholder="Please enter your email" data-val-required="Must provide a valid email address" />
                <span class="text-danger mt-3 mb-3" asp-validation-for="ClientObject.Email"></span>
            </div>
            <div class="card-text">
                <label class="mt-3">Tell me about your love story! (optional, but encouraged)</label>
            </div>
            <div class="card-text">
                <input class="form-control mt-3" type="text" asp-for="@Model.YourLoveStory" />
            </div>
        </div>
        <div id="consultationCard" class="card form-group" align="center">
            <h3 class="card-title mt-3">Event Details</h3>
            <div class="card-text">
                <label class="mt-3 required-star">Date of Event</label>
            </div>
            <div class="card-text">
                <input id="datepicker" class="form-control mt-3" type="text" asp-for="@Model.DateOfEvent" />
                <span class="text-danger mt-3" asp-validation-for="@Model.DateOfEvent"></span>
            </div>
            <div class="card-text">
                <label class="mt-3 required-star">Your Vision of the Event (as much detail as possible)</label>
            </div>
            <div class="card-text">
                <input class="form-control mt-3 mb-3" type="text" asp-for="@Model.VisionOfEvent" data-val-required="Please provide as much detail as possible." />
            </div>
        </div>
        <div class="form-group row pb-3">
            <div class="col pt-3">
                <button type="submit" onclick="return ValidateInput()" class="btn btn-primary parkwayButton form-control">Submit</button>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    <script src="~/js/datepicker.js"></script>
}