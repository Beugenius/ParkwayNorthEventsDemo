@page
@model ParkwayNorthEvents.Pages.SuppliersModel
@using Infrastructure.Utility;
@{
}
@if (User.IsInRole(SD.AdminRole) || User.IsInRole(SD.ManagerRole))
{
    <div class="container">
        <div class="row pt-3">
            <div class="col-6">
                <h2 class="">Suppliers</h2>
            </div>
            <div class="col-6 text-end">
                @{
                    var emptyGuid = new Guid();
                }
                <a asp-page="./Admin/SupplierUpsert" asp-route-id="@emptyGuid" class="btn btn-primary parkwayButton">
                    <i class="fas fa-plus"></i>&nbsp;Create New
                </a>
            </div>
        </div>
        <table id="DT_suppliers" class="table table-striped table-bordered pt-3 pb-3" style="width: 100%">
            <thead>
                <tr>
                    <th>Supplier Name</th>
                    <th>Supplier Phone Number</th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var supplier in Model.Suppliers)
            {
                <tr>
                    <td>@supplier.SupplierName</td>
                    <td>@supplier.SupplierPhoneNumber</td>
                    <td>
                        <div class="text-center">
                            <a href="/Admin/SupplierUpsert?id=@supplier.SupplierId"
                               class="btn btn-primary parkwayButton" style="cursor:pointer; min-width: 100px; max-width: 100px;"> <i class="far fa-edit"></i>Edit</a>
                            <a onClick="Delete('/api/suppliers/@supplier.SupplierId')"
                               class="btn btn-primary parkwayDeleteButton" style="cursor:pointer; min-width: 100px;  max-width: 100px;"> <i class="far fa-trash-alt"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
}
else
{
    <div class="container">
        <div class="row pt-3">
            <div class="col-6">
                <h2 class="">Suppliers</h2>
            </div>
        </div>
        <table id="DT_suppliers" class="table table-striped table-bordered pt-3 pb-3" style="width: 100%">
            <thead>
                <tr>
                    <th>Supplier Name</th>
                    <th>Supplier Phone Number</th>
                </tr>
            </thead>
            @foreach (var supplier in Model.Suppliers)
            {
                <tr>
                    <td>@supplier.SupplierName</td>
                    <td>@supplier.SupplierPhoneNumber</td>
                </tr>
            }
        </table>
    </div>
}
@section Scripts {
    <script src="~/js/supplierupdate.js"></script>
}
