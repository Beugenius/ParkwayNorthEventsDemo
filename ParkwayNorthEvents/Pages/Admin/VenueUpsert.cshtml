@page
@model ParkwayNorthEvents.Pages.Admin.VenueUpsertModel
@{
}
<form method="post" asp-action="Event">
    <div class="container">

        <div class="form-group row pt-3">
            <div class="col-2">
                <label asp-for="VenueObject.VenueName"></label>
            </div>
            <div class="col-3">
                <input class="form-control" asp-for="VenueObject.VenueName" required />
            </div>
            <div class="col-2">
                <label asp-for="VenueObject.VenuePhoneNumber"></label>
            </div>
            <div class="col-3">
                <input class="form-control" asp-for="VenueObject.VenuePhoneNumber" required data-val-regex="Please enter valid phone number" data-val-regex-pattern="^\(?([0-9]{3})\)?[-. ]?([0-9]{3})[-. ]?([0-9]{4})$" />
            </div>
            @if (Model.VenueObject.VenueId != new Guid())
            {
                <input type="hidden" asp-for="VenueObject.VenueId" />
            }
        </div>
        <div class="form-group row pt-3 pb-3">
            <div class="col-7">
            </div>
            <div class="col-1">
                <a class="btn btn-primary parkwayButton" asp-page="./Venues">Venues</a>
            </div>
            <div class="col-1">
                <a class="btn btn-primary parkwayButton" asp-page="./Calendar">Calendar</a>
            </div>
            <div class="col-1">
                <button type="submit" class="btn btn-primary parkwaySuccess">Submit</button>
            </div>

        </div>
    </div>
</form>