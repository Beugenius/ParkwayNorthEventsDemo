@page
@model ParkwayNorthEvents.Pages.Admin.Clients.ClientsModel
@using Infrastructure.Utility; 
@{
}
@if (User.IsInRole(SD.ManagerRole) || User.IsInRole(SD.AdminRole))
{
    <div class="container">
        <div class="row pt-3">
            <div class="col-6 pb-3">
                <h2 class="">Clients</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-page="./Admin/ClientUpsert" asp-route-id="0" class="btn text-dark btn-primary parkwayButton">
                    <i class="fas fa-plus"></i>&nbsp;Create New
                </a>
            </div>
        </div>
        <table id="DT_clients" class="table table-striped table-bordered pt-3 pb-3" style="width: 100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Phone Number</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var client in Model.Clients)
            {
                <tr>
                    <td>@client.FullName</td>
                    <td>@client.PhoneNumber</td>
                    <td>@client.Email</td>
                    <td>
                        <div class="text-center">
                            <a href="/Admin/Clients/ClientUpsert?id=@client.Id"
                       class="btn btn-primary parkwayButton" style="cursor:pointer; min-width: 100px; max-width: 100px;"> <i class="far fa-edit"></i>Edit</a>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
}
else
{
    <div class="container">
        <h2 class="text-danger">You are not authorized to view this page</h2>
    </div>
}

@section Scripts{
    <script>
        var dataTable;

        /* Do not run until page has loaded*/
        $(document).ready(function () {
            loadList();
        });
        // convert tables into DataTables
        function loadList() {
            dataTable = $('#DT_clients').DataTable();
        };
        
    </script>
}
