@page
@model ParkwayNorthEvents.Pages.Admin.Roles.IndexModel
@using Infrastructure.Utility;
@{
}
@if (User.IsInRole(SD.AdminRole))
{
    <div class="border backgroundWhite container">
        <div class="row">
            <div class="col-6">
                <h2 class="text-primary">User List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-page="/Admin/Roles/Update" asp-route-id="@(new Guid().ToString())" class="btn btn-primary parkwayButton"><i class="fas fa-plus"></i> &nbsp; Create New</a>
            </div>
        </div>
        <br /><br />
        <table class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th scope="col">Role</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>

                @{
                    foreach (var role in Model.Roles)
                    {
                        <tr>
                            <td>@role.Name</td>
                            <td>
                                @if (role.Name != SD.AdminRole)
                                {
                                    <a class="btn btn-outline-success" asp-page="/Admin/Roles/Update" asp-route-id="@role.Id">Update</a>
                                }
                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>
}
else
{
    <div class="border backgroundWhite container">
        <div class="row">
            <div class="col-6">
                <h2 class="text-danger">You are not authorized to view this page. Contact an admin.</h2>
            </div>
        </div>
    </div>
}

@section Scripts{
    <script>
        function alertFunc() {
            var success = $("#success").html()
            var message = $("#message").html();
            console.log(success);
            console.log(message);
            if (success == "True") {
                toastr.success(message);
            };

        }
        window.onload = alertFunc();
    </script>
}
